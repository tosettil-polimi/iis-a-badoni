<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#094b8e35"
    android:id="@+id/layout_circolareAlunni">

    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/testo_circolare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="TITOLO CIRCOLARE"
                android:textSize="20sp"
                android:textColor="#212121"
                android:fontFamily="sans-serif-medium" />

            <View
                android:id="@+id/separationLine"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/testo_circolare"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:id="@+id/protocollo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/separationLine" >

                <TextView
                    android:id="@+id/testo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="NÂ° Protocollo: "
                    android:textSize="16sp"
                    android:textColor="#212121"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/testo2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:textSize="16sp"
                    android:textColor="#212121"
                    android:fontFamily="sans-serif-medium"/>

            </LinearLayout>

            <ProgressBar
                android:id="@+id/progressCirc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:paddingTop="16dp"
                android:indeterminate="true"
                android:layout_below="@id/protocollo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/contenutoCirc"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text=""
                android:textSize="16sp"
                android:textColor="#212121"
                android:fontFamily="sans-serif"
                android:layout_below="@id/protocollo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/link"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text=""
                android:textSize="16sp"
                android:textColor="#212121"
                android:fontFamily="sans-serif"
                android:layout_below="@id/contenutoCirc" />

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progressTitleCirc"
                android:layout_above="@+id/separationLine"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:indeterminateOnly="true"
                android:indeterminate="true"
                android:visibility="invisible" />
        </RelativeLayout>
    </ScrollView>
</LinearLayout>